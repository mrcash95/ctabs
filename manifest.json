{
    "name": "CTabs",
    "manifest_version": 2,
  "description": "This extension is a prototype for combating Tabnabbing attack, enchanced from TabShots Extension",
  "version": "1.0",
  "background": {
  		"page": "ctabs.html" 
                },
  "browser_action": {
    "default_icon": "images/16.png",
    "default_title": "CTabs",
    "default_popup": "popup.html"
                    },
    "icons" : {
        "64" : "images/64.png"
    },
  "permissions": [
      "*://*/*", //format for web url <http/s://www.example.com/example>
        "tabs",
  		"<all_urls>",
  		"storage",
        "webRequest",
        "webRequestBlocking",
        "webNavigation"
                 ]
}
